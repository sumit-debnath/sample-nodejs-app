pipeline{
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = credentials('sumit-dockerhub')
    } 

    stages {
        stage('Docker Build') {
            steps{
                sh ''' docker build -t sdnath/simple-nodeapp-sd:dev .'''
            }
        }
        stage('Trivy Scan') {
            steps {
                sh 'trivy --no-progress --exit-code 1 --severity MEDIUM,HIGH,CRITICAl sdnath/simple-nodeapp-sd:dev'
            }
        }
        stage('Docker Login') {
            steps{
                sh ''' echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'''
            }
        }
        stage('Docker Push') {
            steps {
                sh '''docker push sdnath/simple-nodeapp-sd:dev'''
            }
        }
        stage('Deploy') {
            steps {
                ansiblePlaybook playbook: 'ansible/playbook.yml', vaultTmpPath: ''
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}